<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_donate_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/image_size_profile"
            android:layout_height="@dimen/image_size_profile"
            android:layout_marginTop="@dimen/margin_default_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default_medium"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_user_name"
            tools:text="domino_1099"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_image" />

        <TextView
            android:id="@+id/user_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_double"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_double"
            android:paddingStart="@dimen/margin_default_double"
            android:paddingEnd="@dimen/margin_default_double"
            android:textSize="@dimen/text_size_user_info"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            tools:text="Welcome to the official DonateMe page for domino_1099!" />

        <ImageView
            android:id="@+id/user_email"
            android:layout_width="@dimen/image_size_contact"
            android:layout_height="@dimen/image_size_contact"
            android:layout_marginEnd="@dimen/margin_default_double"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="@+id/user_phone"
            app:layout_constraintEnd_toStartOf="@+id/user_phone" />

        <ImageView
            android:id="@+id/user_phone"
            android:layout_width="@dimen/image_size_contact"
            android:layout_height="@dimen/image_size_contact"
            android:layout_marginTop="@dimen/margin_default_double"
            android:src="@drawable/ic_local_phone"
            app:layout_constraintEnd_toEndOf="@+id/user_bio"
            app:layout_constraintStart_toStartOf="@+id/user_bio"
            app:layout_constraintTop_toBottomOf="@+id/user_bio" />

        <ImageView
            android:id="@+id/user_address"
            android:layout_width="@dimen/image_size_contact"
            android:layout_height="@dimen/image_size_contact"
            android:layout_marginStart="@dimen/margin_default_double"
            android:src="@drawable/ic_location_on"
            app:layout_constraintBottom_toBottomOf="@+id/user_phone"
            app:layout_constraintStart_toEndOf="@+id/user_phone" />

        <Button
            android:id="@+id/user_donate_coffee"
            style="@style/DonateButton"
            android:text="@string/user_donate_coffee"
            app:layout_constraintBottom_toTopOf="@+id/user_donate_beer"
            app:layout_constraintEnd_toEndOf="@+id/user_donate_beer"
            app:layout_constraintStart_toStartOf="@+id/user_donate_beer" />

        <Button
            android:id="@+id/user_donate_beer"
            style="@style/DonateButton"
            android:text="@string/user_donate_beer"
            app:layout_constraintBottom_toTopOf="@+id/user_donate_hotdog"
            app:layout_constraintEnd_toEndOf="@+id/user_donate_hotdog"
            app:layout_constraintStart_toStartOf="@+id/user_donate_hotdog" />

        <Button
            android:id="@+id/user_donate_hotdog"
            style="@style/DonateButton"
            android:text="@string/user_donate_hotdog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/user_data_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/user_data_load_error_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:tint="@color/colorErrorIndicator"
            android:src="@drawable/ic_error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_error"
            android:textColor="@color/colorErrorIndicator"
            android:text="@string/user_load_error_message" />

        <Button
            android:id="@+id/user_data_refresh"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:textColor="@color/colorPrimary"
            android:text="@string/user_load_error_action" />

    </LinearLayout>

</FrameLayout>